<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/web_hi_res_white"
        android:text="M"
        android:paddingTop="6dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:enabled="true"
        android:textAllCaps="true"
        android:id="@+id/firstLetter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subject"
        android:textSize="22dp"
        android:textColorHint="@android:color/black"
        android:id="@+id/subject"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/firstLetter" />
    <TextView
        android:id="@+id/_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="id"
        android:textSize="25dp"
        android:textColorHint="@android:color/black"
        android:layout_alignBottom="@+id/subject"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textSize="22dp"
        android:textColorHint="@android:color/black"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/percent"
        android:layout_alignBottom="@+id/_id"
        android:layout_toStartOf="@+id/textView7" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textSize="25dp"
        android:textColorHint="@android:color/black"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/percent"
        android:layout_alignParentEnd="true" />

</RelativeLayout>